<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <TextView
            android:text="色调:"
            android:textSize="20sp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
	    <Spinner 
	        android:id="@+id/hue"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	         
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <TextView
            android:text="饱和度:"
            android:textSize="20sp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
	    <Spinner 
	        android:id="@+id/sat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <TextView
            android:text="锐度:"
            android:textSize="20sp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
        <RadioGroup 
            android:id="@+id/sharp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
             <RadioButton 
                 android:id="@+id/sharp_hard"
                 android:text="锐利" 
                  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             <RadioButton 
                  android:id="@+id/sharp_standard"
                 android:text="标准" 
                 android:checked="true"
                  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             <RadioButton 
                  android:id="@+id/sharp_soft"
                 android:text="柔和" 
                  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </RadioGroup>
             </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
            android:text="对比度:"
            android:textSize="20sp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
        <RadioGroup 
            android:id="@+id/contrast"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
             <RadioButton 
                 android:id="@+id/contrast_hard"
                 android:text="强烈" 
                  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             <RadioButton 
                  android:id="@+id/contrast_standard"
                 android:text="标准" 
                 android:checked="true"
                  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             <RadioButton 
                  android:id="@+id/contrast_soft"
                 android:text="柔和" 
                  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </RadioGroup>
       </LinearLayout>
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ISO:"
            android:textSize="20sp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
       <Spinner
           android:id="@+id/isoSpinner"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       />
       </LinearLayout>
    <RadioGroup
        android:id="@+id/quality"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/quality_excellent"
            android:text="极好"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/quality_normal"
            android:text="一般"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/quality_fine"
            android:text="较好"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>


    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回"/>
<!--    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/sure"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="确定"
            />
        <Button 
            android:id="@+id/cancel"
             android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="取消"
            />
    </LinearLayout>   -->
</LinearLayout>